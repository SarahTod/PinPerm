{
  "manifest_version": 2,
  "name": "Tab Pin Manager",
  "version": "1.0",
  "description": "Manage pinned tabs across browser sessions",
  "permissions": ["tabs", "storage", "contextMenus"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
